<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.kuisioner.KuisionerActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <GridLayout
                android:id="@+id/GL_kuisioner"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:alignmentMode="alignMargins"
                android:columnCount="1"
                android:columnOrderPreserved="false"
                android:rowCount="1">
        <androidx.cardview.widget.CardView

            android:id="@+id/cv_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardElevation="6dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            app:cardCornerRadius="12dp"
            android:layout_margin="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_pertanyaan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/font1"
                    android:text="Apakah Anda Sudah Makan Hari ini ?"
                    android:textColor="#000"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="70dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_height="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_kategori"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font1"
                    android:text="Tengible"
                    android:textColor="@color/hint"
                    android:textSize="12sp" />
            </LinearLayout>

            <RadioGroup
                android:layout_marginTop="90dp"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:orientation="vertical">

                <RadioButton android:id="@+id/rb_1"
                    android:layout_marginLeft="13dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nilai Jawaban 1"
                    android:buttonTint="@color/splashcolor"/>

                <RadioButton android:id="@+id/rb_2"
                    android:layout_marginLeft="13dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nilai Jawaban 2"
                    android:buttonTint="@color/splashcolor"/>

                <RadioButton android:id="@+id/rb_3"
                    android:layout_marginLeft="13dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nilai Jawaban 3"
                    android:buttonTint="@color/splashcolor"/>

                <RadioButton android:id="@+id/rb_4"
                    android:layout_marginLeft="13dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nilai Jawaban 4"
                    android:buttonTint="@color/splashcolor"/>

                <RadioButton android:id="@+id/rb_5"
                    android:layout_marginLeft="13dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nilai Jawaban 5 "
                    android:buttonTint="@color/splashcolor"/>
            </RadioGroup>



        </androidx.cardview.widget.CardView>


            </GridLayout>
    </RelativeLayout>

</ScrollView>